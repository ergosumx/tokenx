<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>

    <NoWarn>$(NoWarn);IDISP005;MA0032;MA0045;CA2000</NoWarn>
    <UseSentencePiecePackage Condition="'$(UseSentencePiecePackage)' == ''">false</UseSentencePiecePackage>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="coverlet.collector" Version="6.0.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.8.0" />
    <PackageReference Include="xunit" Version="2.5.3" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.5.3" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Xunit" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ErgoX.TokenX.Testing\ErgoX.TokenX.Testing.csproj" />
    <ProjectReference Include="..\..\src\Common\ErgoX.TokenX.Common.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(UseSentencePiecePackage)' != 'true'">
    <ProjectReference Include="..\..\src\SentencePiece\ErgoX.TokenX.SentencePiece.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(UseSentencePiecePackage)' == 'true'">
    <PackageReference Include="ErgoX.TokenX.SentencePiece" Version="$(SentencePiecePackageVersion)" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\_sentencepeice\**\*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
